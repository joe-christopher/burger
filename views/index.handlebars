<h1>Burgers!</h1>

<h2>Uneaten</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <p> <h2>{{burger_name}}</h2>
      <button class="devoured" data-id="{{id}}">Devour it!</button></p>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that are devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
         <p> <h2>{{burger_name}}</h2></p>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a burger:</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burgerAdd">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

